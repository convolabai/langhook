{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenSense Canonical Event v1",
  "description": "Schema for OpenSense canonical events with REST-aligned structure",
  "type": "object",
  "required": [
    "publisher",
    "resource",
    "action", 
    "timestamp",
    "raw"
  ],
  "properties": {
    "publisher": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Lowercase slug of the system (github, stripe, etc.)"
    },
    "resource": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Singular noun (pull_request, issue, payment_intent)"
        },
        "id": {
          "oneOf": [
            {"type": "string"},
            {"type": "integer"}
          ],
          "description": "Atomic identifier - no composite keys"
        }
      },
      "additionalProperties": false,
      "description": "One logical entity"
    },
    "action": {
      "type": "string",
      "enum": ["create", "read", "update", "delete"],
      "description": "CRUD action enum"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp in UTC (YYYY-MM-DDTHH:mm:ssZ)"
    },
    "summary": {
      "type": "string",
      "maxLength": 120,
      "description": "â‰¤120-char human sentence (optional)"
    },
    "raw": {
      "type": "object",
      "description": "Entire original payload - no filtering"
    }
  },
  "additionalProperties": false
}